{
    "locales": [
        "en",
        "fr"
    ],
    "catalogs": [
        {
            "path": "src/locales/{locale}/messages",
            "include": [
                "src"
            ],
            "exclude": [
                "src/locales/**"
            ]
        }
    ],
    "format": "po",
    "formatOptions": {
        "origins": true,
        "lineNumbers": false
    },
    "sourceLocale": "en",
    "fallbackLocales": {
        "default": "en"
    },
    "extractBabelOptions": {
        "presets": [
            "@babel/preset-typescript"
        ]
    }
}
